<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34ACBC"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    tools:context=".DadosCep">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEP:  " />

            <MultiAutoCompleteTextView
                android:id="@+id/datacep"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:editable="false"
                android:text="MultiAutoCompleteTextView" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="UF:" />

            <MultiAutoCompleteTextView
                android:id="@+id/datauf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:editable="false"
                android:text="MultiAutoCompleteTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade:  " />

            <MultiAutoCompleteTextView
                android:id="@+id/datacid"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:editable="false"
                android:text="MultiAutoCompleteTextView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bairro:" />

            <MultiAutoCompleteTextView
                android:id="@+id/databai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:editable="false"
                android:text="MultiAutoCompleteTextView" />

            <TextView
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:text="Rua:" />

            <MultiAutoCompleteTextView
                android:id="@+id/datarua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:editable="false"
                android:text="MultiAutoCompleteTextView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DDD:" />

            <MultiAutoCompleteTextView
                android:id="@+id/dataddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:editable="false"
                android:text="MultiAutoCompleteTextView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complemento:" />

            <MultiAutoCompleteTextView
                android:id="@+id/datacomp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:editable="false"
                android:text="MultiAutoCompleteTextView" />

            <Button
                android:id="@+id/btmapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#85C3CF"
                android:onClick="sendMessage"
                android:text="Abrir Mapa"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>